<UserControl x:Class="DataMiningForShoppingBasket.Views.CashierInterfaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataMiningForShoppingBasket.Views"
             xmlns:viewModels="clr-namespace:DataMiningForShoppingBasket.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:CashierInterfaceViewModel}">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <DataGrid VerticalAlignment="Stretch"
                  Grid.Column="1"
                  Grid.Row="0"
                  Grid.RowSpan="3"
                  Margin="5"
                  ItemsSource="{Binding ProductsList}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding ProductInstance.id}"/>
                <DataGridTextColumn Width="4*"
                                    Binding="{Binding ProductInstance.ProductName}"/>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding ProductInstance.ProductTypes.ProductTypeName}"/>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding ProductInstance.Cost}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Column="1"
                Grid.Row="3"
                Content="Выход" 
                Command="{Binding ButtonClickCommand}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Padding="15,3"/>
    </Grid>
</UserControl>
